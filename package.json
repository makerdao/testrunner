{
  "name": "testrunner",
  "version": "1.0.0",
  "description": "Automated Test Runner for JS Products",
  "main": "index.js",
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.6.0",
    "@makerdao/dai": "^0.18.5",
    "@makerdao/dai-plugin-config": "^0.2.14-rc.1",
    "@makerdao/dai-plugin-mcd": "^0.2.14-rc.1",
    "@makerdao/testchain-client": "^0.2.14-rc.1",
    "babel-jest": "^24.9.0",
    "commander": "^3.0.1",
    "ethereumjs-wallet": "^0.6.3",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@makerdao/testchain": "^0.2.14",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.3.0",
    "husky": "0.14.3",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "testchain": "./node_modules/@makerdao/testchain/scripts/launch -s default --fast",
    "test": "jest",
    "precommit": "lint-staged",
    "cli": "node ./src/cli"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/setup-global.js",
    "globalTeardown": "<rootDir>/test/teardown-global.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makerdao/testrunner.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.js": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/makerdao/testrunner/issues"
  },
  "homepage": "https://github.com/makerdao/testrunner#readme"
}
